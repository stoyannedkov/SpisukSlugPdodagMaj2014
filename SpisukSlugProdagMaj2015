SELECT t1.lastname
 ,t1.firstname
 ,t4.product_name
 ,t2.order_date
 ,t5.customer_code
 ,t3.unit_price*t3.quantity total
FROM employees t1
        LEFT OUTER JOIN
    orders t2
        ON t1.employee_id=t2.employee_id
        INNER JOIN
    customers t5
ON t2.customer_id=t5.customer_id
        INNER JOIN 
    orders t2
ON t5.customer_id=t2.customer_id
        LEFT OUTER JOIN
    order_details t3
ON t2.order_id=t3.order_id
        RIGHT OUTER JOIN
    products t4
ON t3.product_id=t4.product_id
WHERE t2.order_date BETWEEN '2015-05-01' AND '2015-05-31'
```
